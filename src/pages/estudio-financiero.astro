---
import BaseLayout from "@/layouts/BaseLayout.astro";
import EstudioFinancieroForm from "@/components/EstudioFinancieroForm.tsx";

const benefits = [
  {
    title: "Capacidad real de inversión",
    description: "Calculamos exactamente cuánto puede invertir, incluyendo todos los gastos asociados a la compra.",
    icon: '<rect width="16" height="16" x="4" y="4" rx="2"/><path d="m9 9 6 6"/><path d="m15 9-6 6"/>'
  },
  {
    title: "Ahorro optimizado",
    description: "Le indicamos cuánto ahorrar mensualmente para alcanzar su objetivo en el plazo deseado.",
    icon: '<path d="M19 5c-1.5 0-2.8 1.4-3 2-3.5-1.5-11-.3-11 5 0 1.8 0 3 2 4.5V20h4v-2h3v2h4v-4c1-.5 1.7-1 2-2h2v-4h-2c0-1-.5-1.5-1-2V5z"/><path d="M2 9v1c0 1.1.9 2 2 2h1"/><path d="M16 11h.01"/>'
  },
  {
    title: "Mejores condiciones",
    description: "Negociamos con múltiples entidades para conseguir las mejores condiciones de financiación.",
    icon: '<polyline points="22 7 13.5 15.5 8.5 10.5 2 17"/><polyline points="16 7 22 7 22 13"/>'
  },
  {
    title: "Sin sorpresas",
    description: "Desglosamos todos los gastos: notaría, registro, impuestos, gestoría... sin letra pequeña.",
    icon: '<path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"/>'
  }
];

const includes = [
  "Análisis de ingresos y gastos fijos",
  "Cálculo de capacidad de endeudamiento",
  "Simulación de cuotas hipotecarias",
  "Desglose completo de gastos de compra",
  "Comparativa de ofertas bancarias",
  "Plan de ahorro personalizado",
  "Informe escrito detallado",
  "Reunión explicativa sin compromiso"
];

const faqs = [
  {
    question: "¿El estudio financiero tiene algún coste?",
    answer: "No, el estudio financiero es completamente gratuito y sin compromiso. Es un servicio que ofrecemos a todos nuestros clientes potenciales."
  },
  {
    question: "¿Necesito aportar documentación?",
    answer: "Para el estudio inicial no necesita aportar documentación. Si después decide continuar con la búsqueda de financiación, le indicaremos qué documentos necesitamos."
  },
  {
    question: "¿Trabajáis con algún banco en concreto?",
    answer: "No tenemos acuerdos exclusivos con ningún banco. Comparamos ofertas de múltiples entidades para conseguir las mejores condiciones para usted."
  },
  {
    question: "¿Cuánto tarda en recibir el estudio?",
    answer: "Normalmente contactamos en menos de 48 horas. El estudio completo suele estar listo en 3-5 días hábiles, dependiendo de la complejidad."
  }
];
---

<BaseLayout title="Estudio Financiero Gratuito" hasForm={true}>
  <main class="flex-grow">
    
    <!-- Hero Section -->
    <section class="py-32 px-6 text-center bg-muted/30 pt-44">
      <div class="max-w-4xl mx-auto">
        <span class="inline-flex items-center gap-2 text-accent uppercase tracking-widest text-xs font-bold mb-6">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m12 3-1.912 5.813a2 2 0 0 1-1.275 1.275L3 12l5.813 1.912a2 2 0 0 1 1.275 1.275L12 21l1.912-5.813a2 2 0 0 1 1.275-1.275L21 12l-5.813-1.912a2 2 0 0 1-1.275-1.275L12 3Z"/>
          </svg>
          Servicio Gratuito
        </span>
        <h1 class="text-4xl md:text-6xl font-serif mb-8">
          Estudio Financiero
        </h1>
        <p class="text-xl text-muted-foreground font-light max-w-2xl mx-auto leading-relaxed">
          Antes de buscar casa, sepa exactamente cuánto puede invertir.<br class="hidden md:block" />
          Analizamos su situación financiera sin compromiso.
        </p>

        <!-- Quick benefits -->
        <div class="flex flex-wrap justify-center gap-6 mt-12">
          <div class="flex items-center gap-2 text-sm text-muted-foreground">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-accent">
              <path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"/>
            </svg>
            100% Gratuito
          </div>
          <div class="flex items-center gap-2 text-sm text-muted-foreground">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-accent">
              <circle cx="12" cy="12" r="10"/>
              <polyline points="12 6 12 12 16 14"/>
            </svg>
            Respuesta en 48h
          </div>
          <div class="flex items-center gap-2 text-sm text-muted-foreground">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-accent">
              <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/>
              <polyline points="14 2 14 8 20 8"/>
            </svg>
            Informe detallado
          </div>
        </div>
      </div>
    </section>

    <!-- Benefits Grid -->
    <section class="py-24 px-6">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
          <span class="text-accent uppercase tracking-widest text-xs font-bold mb-4 block">Ventajas</span>
          <h2 class="text-3xl md:text-5xl font-serif mb-4">
            ¿Por qué hacer un estudio financiero?
          </h2>
          <p class="text-muted-foreground font-light max-w-xl mx-auto">
            Comprar una vivienda es una de las decisiones financieras más importantes. 
            Merece hacerlo con toda la información.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-x-12 gap-y-16">
          {benefits.map((benefit) => (
            <div class="group flex gap-5">
              <div class="w-14 h-14 bg-primary/5 rounded-full flex items-center justify-center flex-shrink-0 text-primary group-hover:bg-primary group-hover:text-white transition-colors duration-500">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" set:html={benefit.icon} />
              </div>
              <div>
                <h3 class="text-xl font-serif mb-2 group-hover:text-primary transition-colors">{benefit.title}</h3>
                <p class="text-muted-foreground font-light leading-relaxed">
                  {benefit.description}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- What's included -->
    <section class="py-24 px-6 bg-muted/30">
      <div class="max-w-6xl mx-auto">
        <div class="grid md:grid-cols-2 gap-16 items-center">
          <div>
            <span class="text-accent uppercase tracking-widest text-xs font-bold mb-4 block">
              Todo incluido
            </span>
            <h2 class="text-3xl md:text-5xl font-serif mb-6">
              ¿Qué incluye el estudio?
            </h2>
            <p class="text-muted-foreground font-light mb-10">
              Un análisis completo de su situación financiera para que tome 
              la mejor decisión posible.
            </p>
            
            <ul class="space-y-4">
              {includes.map((item) => (
                <li class="flex items-start gap-3">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-accent flex-shrink-0 mt-0.5">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                    <polyline points="22 4 12 14.01 9 11.01"/>
                  </svg>
                  <span class="text-foreground/80 font-light">{item}</span>
                </li>
              ))}
            </ul>
          </div>

          <div class="bg-primary text-white p-10 md:p-14">
            <h3 class="text-2xl md:text-3xl font-serif mb-6">
              Sin letra pequeña
            </h3>
            <p class="text-white/80 font-light mb-6 leading-relaxed">
              Nuestro estudio financiero es completamente gratuito y sin compromiso. 
              No trabajamos para ningún banco, trabajamos para usted.
            </p>
            <p class="text-white/80 font-light mb-8 leading-relaxed">
              Si después del estudio decide no continuar, no pasa nada. 
              Habrá ganado claridad sobre su situación financiera.
            </p>
            <div class="flex items-center gap-3 text-accent">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
                <circle cx="9" cy="7" r="4"/>
                <path d="M22 21v-2a4 4 0 0 0-3-3.87"/>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
              </svg>
              <span class="text-sm font-medium">+200 estudios realizados este año</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Process -->
    <section class="py-24 px-6">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-16">
          <span class="text-accent uppercase tracking-widest text-xs font-bold mb-4 block">El Proceso</span>
          <h2 class="text-3xl md:text-5xl font-serif mb-4">
            ¿Cómo funciona?
          </h2>
          <p class="text-muted-foreground font-light">
            Un proceso sencillo en 4 pasos.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="text-6xl font-serif text-primary/20 mb-4">01</div>
            <h3 class="text-lg font-serif mb-2">Solicitud</h3>
            <p class="text-muted-foreground font-light text-sm">
              Rellene el formulario con sus datos básicos. Solo necesitamos 2 minutos.
            </p>
          </div>
          <div class="text-center">
            <div class="text-6xl font-serif text-primary/20 mb-4">02</div>
            <h3 class="text-lg font-serif mb-2">Análisis</h3>
            <p class="text-muted-foreground font-light text-sm">
              Nuestro equipo financiero analiza su situación en 24-48 horas.
            </p>
          </div>
          <div class="text-center">
            <div class="text-6xl font-serif text-primary/20 mb-4">03</div>
            <h3 class="text-lg font-serif mb-2">Reunión</h3>
            <p class="text-muted-foreground font-light text-sm">
              Le explicamos los resultados en una reunión (presencial u online).
            </p>
          </div>
          <div class="text-center">
            <div class="text-6xl font-serif text-primary/20 mb-4">04</div>
            <h3 class="text-lg font-serif mb-2">Informe</h3>
            <p class="text-muted-foreground font-light text-sm">
              Recibe un informe detallado con todas las opciones y recomendaciones.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Form Section -->
    <section class="py-24 px-6 bg-muted/30">
      <div class="max-w-2xl mx-auto">
        <div class="text-center mb-12">
          <span class="text-accent uppercase tracking-widest text-xs font-bold mb-4 block">Solicitar</span>
          <h2 class="text-3xl md:text-5xl font-serif mb-4">
            Estudio gratuito
          </h2>
          <p class="text-muted-foreground font-light">
            Complete el formulario y le contactaremos en menos de 48 horas.
          </p>
        </div>

        <EstudioFinancieroForm client:visible />

        <!-- Contact alternative -->
        <div class="text-center mt-10">
          <p class="text-muted-foreground text-sm mb-4">
            ¿Prefiere hablar directamente?
          </p>
          <a
            href="tel:+34747488562"
            class="inline-flex items-center gap-2 text-primary font-medium hover:text-accent transition-colors"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
            </svg>
            747 488 562
          </a>
        </div>
      </div>
    </section>

    <!-- FAQ -->
    <section class="py-24 px-6">
      <div class="max-w-3xl mx-auto">
        <div class="text-center mb-16">
          <span class="text-accent uppercase tracking-widest text-xs font-bold mb-4 block">FAQ</span>
          <h2 class="text-3xl md:text-4xl font-serif">Preguntas frecuentes</h2>
        </div>

        <div class="space-y-6">
          {faqs.map((faq) => (
            <div class="bg-muted/30 p-6 md:p-8">
              <h4 class="font-serif text-lg mb-3">{faq.question}</h4>
              <p class="text-muted-foreground font-light">{faq.answer}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

  </main>
</BaseLayout>
