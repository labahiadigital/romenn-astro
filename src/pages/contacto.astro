---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Button } from "@/components/ui/button";
---

<BaseLayout title="Contacto">
  <!-- Hero Banner -->
  <section class="relative h-[400px] flex items-center justify-center bg-primary text-white pt-24">
    <div class="max-w-7xl mx-auto px-6 text-center">
      <span class="text-accent uppercase tracking-[0.2em] text-xs font-bold mb-4 block">Hablemos</span>
      <h1 class="text-4xl md:text-6xl font-serif">Contacto</h1>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-32 bg-background">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid md:grid-cols-2 gap-16">
        <!-- Contact Info -->
        <div>
          <span class="text-accent text-xs uppercase tracking-widest font-bold mb-4 block">Oficina Central</span>
          <h2 class="text-3xl md:text-4xl font-serif mb-8">Römenn Rivas</h2>
          
          <div class="space-y-8">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-primary rounded-sm flex items-center justify-center flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
              </div>
              <div>
                <p class="text-xs text-muted-foreground uppercase tracking-widest mb-2">Teléfono</p>
                <a href="tel:+34600000000" class="text-xl font-serif hover:text-accent transition-colors">
                  +34 600 000 000
                </a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-primary rounded-sm flex items-center justify-center flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
              </div>
              <div>
                <p class="text-xs text-muted-foreground uppercase tracking-widest mb-2">Email</p>
                <a href="mailto:privado@romenn.es" class="text-xl font-serif hover:text-accent transition-colors">
                  privado@romenn.es
                </a>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-primary rounded-sm flex items-center justify-center flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
              </div>
              <div>
                <p class="text-xs text-muted-foreground uppercase tracking-widest mb-2">Dirección</p>
                <p class="text-xl font-serif">
                  Rivas-Vaciamadrid<br/>
                  Madrid, España
                </p>
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-primary rounded-sm flex items-center justify-center flex-shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
              </div>
              <div>
                <p class="text-xs text-muted-foreground uppercase tracking-widest mb-2">Horario</p>
                <p class="text-xl font-serif">
                  Lunes a Viernes: 9:00 - 19:00
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div>
          <form class="bg-muted p-10 space-y-6">
            <h3 class="text-2xl font-serif mb-8">Envíenos un mensaje</h3>

            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label for="name" class="text-xs uppercase tracking-widest text-muted-foreground mb-2 block">Nombre</label>
                <input 
                  id="name" 
                  type="text"
                  placeholder="Su nombre" 
                  class="w-full px-4 py-3 bg-white border border-border focus:border-accent focus:outline-none transition-colors"
                />
              </div>

              <div>
                <label for="email" class="text-xs uppercase tracking-widest text-muted-foreground mb-2 block">Email</label>
                <input 
                  id="email" 
                  type="email" 
                  placeholder="su@email.com" 
                  class="w-full px-4 py-3 bg-white border border-border focus:border-accent focus:outline-none transition-colors"
                />
              </div>
            </div>

            <div>
              <label for="phone" class="text-xs uppercase tracking-widest text-muted-foreground mb-2 block">Teléfono</label>
              <input 
                id="phone" 
                type="tel" 
                placeholder="600 000 000" 
                class="w-full px-4 py-3 bg-white border border-border focus:border-accent focus:outline-none transition-colors"
              />
            </div>

            <div>
              <label for="message" class="text-xs uppercase tracking-widest text-muted-foreground mb-2 block">Mensaje</label>
              <textarea
                id="message"
                placeholder="¿En qué podemos ayudarle?"
                rows="5"
                class="w-full px-4 py-3 bg-white border border-border focus:border-accent focus:outline-none transition-colors resize-none"
              ></textarea>
            </div>

            <Button className="btn-premium w-full h-14" client:load>
              Enviar mensaje
            </Button>
          </form>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
