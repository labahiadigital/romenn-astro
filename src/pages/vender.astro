---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Button } from "@/components/ui/button";
import ComparisonTable from "@/components/ComparisonTable";
---

<BaseLayout title="Vender con Römenn">
  <!-- Hero Section -->
  <section class="relative py-24 md:py-32 px-6 pt-44">
    <div class="max-w-6xl mx-auto grid md:grid-cols-2 gap-16 items-center">
      <div class="space-y-8">
        <span class="text-accent uppercase tracking-widest text-xs font-bold">Vender con Römenn</span>
        <h1 class="text-4xl md:text-6xl font-serif leading-tight">
          El arte de vender <br/>
          <span class="italic text-muted-foreground">su propiedad.</span>
        </h1>
        <p class="text-lg font-light text-muted-foreground">
          No solo vendemos casas. Creamos una narrativa irresistible que maximiza el valor de su patrimonio.
        </p>
        <a href="/valoracion">
          <Button className="btn-premium" client:load>Solicitar Valoración Gratuita</Button>
        </a>
      </div>
      
      <div class="relative h-[500px] bg-muted rounded-sm overflow-hidden">
        <img 
          src="/images/hero-couple.jpg" 
          alt="Interior Design" 
          class="absolute inset-0 w-full h-full object-cover opacity-90 hover:scale-105 transition-transform duration-1000"
        />
      </div>
    </div>
  </section>

  <!-- Comparison Section -->
  <section class="py-24 bg-muted/30">
    <div class="max-w-5xl mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-5xl font-serif mb-6">¿Por qué Römenn?</h2>
        <p class="text-muted-foreground font-light max-w-2xl mx-auto">
          En un mercado saturado, la distinción es la clave del éxito. 
          Compare usted mismo el estándar de la industria frente a la excelencia boutique.
        </p>
      </div>
      <ComparisonTable client:visible />
    </div>
  </section>

  <!-- Form Section -->
  <section class="py-24 bg-primary text-white">
    <div class="max-w-4xl mx-auto px-6 text-center">
      <h2 class="text-3xl md:text-4xl font-serif mb-8">Comencemos con una conversación.</h2>
      <div class="bg-white text-foreground p-8 md:p-12 rounded-sm shadow-2xl max-w-2xl mx-auto">
        <form class="space-y-6 text-left" id="vender-form">
          <div class="grid md:grid-cols-2 gap-6">
            <div class="space-y-2">
              <label class="text-xs uppercase tracking-widest text-muted-foreground">Nombre</label>
              <input 
                type="text"
                name="name"
                class="w-full px-4 py-3 bg-muted/20 border border-border focus:border-accent focus:outline-none transition-colors" 
                placeholder="Su nombre completo" 
              />
            </div>
            <div class="space-y-2">
              <label class="text-xs uppercase tracking-widest text-muted-foreground">Teléfono</label>
              <input 
                type="tel"
                name="phone"
                class="w-full px-4 py-3 bg-muted/20 border border-border focus:border-accent focus:outline-none transition-colors" 
                placeholder="+34 600 000 000" 
              />
            </div>
          </div>
          <div class="space-y-2">
            <label class="text-xs uppercase tracking-widest text-muted-foreground">Dirección del Inmueble</label>
            <input 
              type="text"
              name="address"
              class="w-full px-4 py-3 bg-muted/20 border border-border focus:border-accent focus:outline-none transition-colors" 
              placeholder="Calle, Número, Ciudad" 
            />
          </div>
          <Button className="w-full btn-premium py-6" client:load type="submit">
            Enviar Solicitud Privada
          </Button>
        </form>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  const form = document.getElementById('vender-form');
  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const formData = new FormData(e.target as HTMLFormElement);
    const data = Object.fromEntries(formData.entries());
    console.log('Form data:', data);
    // TODO: Conectar con API/CRM
    alert('Solicitud enviada. Le contactaremos pronto.');
    (e.target as HTMLFormElement).reset();
  });
</script>
