---
import BaseLayout from "@/layouts/BaseLayout.astro";
import SmartReviews from "@/components/SmartReviews";
---

<BaseLayout title="Experiencia Cliente">
  <main class="flex-grow py-20 px-6 flex items-center justify-center bg-muted/30">
    <div class="w-full max-w-4xl">
      <div class="text-center mb-12">
        <span class="text-xs font-bold uppercase tracking-widest text-accent mb-4 block">Excelencia</span>
        <h1 class="text-4xl md:text-5xl font-serif mb-6">Experiencia Cliente</h1>
        <p class="text-xl text-muted-foreground font-sans font-light max-w-2xl mx-auto">
          La transparencia es nuestro mayor activo. <br/>
          Escuchamos para seguir liderando.
        </p>
      </div>

      <SmartReviews client:visible />
    </div>
  </main>
</BaseLayout>
