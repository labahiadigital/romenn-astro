---
import "@/styles/globals.css";
import { Font } from "astro:assets";
import HeaderStatic from "@/components/HeaderStatic.astro";
import Footer from "@/components/Footer.astro";
import WhatsAppButton from "@/components/WhatsAppButton.astro";
import { Toaster } from "@/components/ui/sonner";
import { SEO } from "astro-seo";
import { Schema } from "astro-seo-schema";

interface Props {
  title: string;
  description?: string;
  image?: string;
  noindex?: boolean;
  hasForm?: boolean;
  // Schema.org type
  schemaType?: 'WebPage' | 'AboutPage' | 'ContactPage' | 'FAQPage' | 'Article';
  // Article specific (for blog posts)
  articlePublishedTime?: string;
  articleModifiedTime?: string;
  articleAuthor?: string;
}

const { 
  title, 
  description = "Vender una vivienda no es una operación. Es una decisión. Asesoría inmobiliaria boutique en Rivas-Vaciamadrid.",
  image,
  noindex = false,
  hasForm = false,
  schemaType = 'WebPage',
  articlePublishedTime,
  articleModifiedTime,
  articleAuthor = 'Römenn Inmobiliaria',
} = Astro.props;

const currentPath = Astro.url.pathname;
const canonicalURL = new URL(currentPath, Astro.site);

// Generar ruta de imagen OG dinámica basada en la página actual
const getOgImagePath = () => {
  // Remover barras al inicio y final
  let route = currentPath.replace(/^\/|\/$/g, '');
  // Si es la home, usar 'index'
  if (route === '') route = 'index';
  return `/og/${route}.png`;
};

// Usar imagen personalizada si se proporciona, sino usar la generada dinámicamente
const ogImagePath = image || getOgImagePath();
const imageURL = new URL(ogImagePath, Astro.site);

// Datos de la organización para Schema.org
const organizationData = {
  "@type": "RealEstateAgent" as const,
  name: "Römenn Inmobiliaria",
  alternateName: "Römenn",
  url: "https://romenninmobiliaria.es",
  logo: "https://romenninmobiliaria.es/romenn-logo.png",
  image: "https://romenninmobiliaria.es/romenn-logo.png",
  description: "Inmobiliaria Boutique Internacional en Rivas-Vaciamadrid, Madrid. Servicios personalizados de compra, venta y alquiler de propiedades.",
  telephone: "+34747488562",
  email: "romenn.inmo@gmail.com",
  address: {
    "@type": "PostalAddress" as const,
    streetAddress: "Pl. León Felipe, 6 posterior, local 2",
    addressLocality: "Rivas-Vaciamadrid",
    addressRegion: "Madrid",
    postalCode: "28523",
    addressCountry: "ES"
  },
  geo: {
    "@type": "GeoCoordinates" as const,
    latitude: "40.3558",
    longitude: "-3.5193"
  },
  openingHoursSpecification: [
    {
      "@type": "OpeningHoursSpecification" as const,
      dayOfWeek: ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
      opens: "09:00",
      closes: "20:00"
    },
    {
      "@type": "OpeningHoursSpecification" as const,
      dayOfWeek: "Saturday",
      opens: "10:00",
      closes: "14:00"
    }
  ],
  sameAs: [
    "https://www.instagram.com/romenn_inmobiliaria/",
    "https://www.linkedin.com/company/romenn-inmobiliaria/"
  ],
  priceRange: "€€€",
  areaServed: {
    "@type": "City" as const,
    name: "Rivas-Vaciamadrid"
  }
};
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Fuentes optimizadas con Astro experimental fonts API (preload automático + fallbacks calculados) -->
    <Font cssVariable="--font-manrope" preload />
    <Font cssVariable="--font-playfair" preload />
    
    <!-- Preload hero image for faster LCP - responsive based on viewport -->
    <link rel="preload" href="/hero-frame-mobile.webp" as="image" type="image/webp" media="(max-width: 800px)" />
    <link rel="preload" href="/hero-frame.webp" as="image" type="image/webp" media="(min-width: 801px)" />
    
    <!-- SEO -->
    <SEO
      title={title}
      titleTemplate="%s | Römenn"
      titleDefault="Römenn - Inmobiliaria Boutique"
      description={description}
      canonical={canonicalURL.href}
      noindex={noindex}
      nofollow={noindex}
      languageAlternates={[
        { href: canonicalURL.href, hrefLang: "es" },
      ]}
      openGraph={{
        basic: {
          title: `${title} | Römenn Inmobiliaria`,
          type: schemaType === 'Article' ? "article" : "website",
          image: imageURL.href,
          url: canonicalURL.href,
        },
        optional: {
          description: description,
          locale: "es_ES",
          siteName: "Römenn Inmobiliaria",
        },
        image: {
          url: imageURL.href,
          secureUrl: imageURL.href,
          type: "image/png",
          width: 1200,
          height: 630,
          alt: `${title} - Römenn Inmobiliaria`,
        },
        ...(schemaType === 'Article' && articlePublishedTime ? {
          article: {
            publishedTime: articlePublishedTime,
            modifiedTime: articleModifiedTime || articlePublishedTime,
            authors: [articleAuthor],
            section: "Inmobiliaria",
            tags: ["inmobiliaria", "rivas-vaciamadrid", "madrid", "comprar casa", "vender casa"],
          },
        } : {}),
      }}
      twitter={{
        card: "summary_large_image",
        site: "@romenn_inmo",
        creator: "@romenn_inmo",
        title: `${title} | Römenn`,
        image: imageURL.href,
        imageAlt: `${title} - Römenn Inmobiliaria`,
        description: description,
      }}
      extend={{
        link: [
          { rel: "icon", href: "/romenn-logo.svg", type: "image/svg+xml" },
          { rel: "apple-touch-icon", href: "/romenn-logo.png" },
          { rel: "sitemap", href: "/sitemap-index.xml" },
        ],
        meta: [
          { name: "theme-color", content: "#1a365d" },
          { name: "msapplication-TileColor", content: "#1a365d" },
          { name: "author", content: "Römenn Inmobiliaria" },
          { name: "robots", content: noindex ? "noindex, nofollow" : "index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" },
          { name: "googlebot", content: "index, follow" },
          { name: "geo.region", content: "ES-M" },
          { name: "geo.placename", content: "Rivas-Vaciamadrid" },
          { name: "geo.position", content: "40.3558;-3.5193" },
          { name: "ICBM", content: "40.3558, -3.5193" },
        ],
      }}
    />
    
    <!-- Schema.org JSON-LD -->
    <Schema
      item={{
        "@context": "https://schema.org",
        "@type": schemaType,
        name: title,
        description: description,
        url: canonicalURL.href,
        image: imageURL.href,
        inLanguage: "es",
        isPartOf: {
          "@type": "WebSite",
          name: "Römenn Inmobiliaria",
          url: "https://romenninmobiliaria.es",
          description: "Inmobiliaria Boutique Internacional en Rivas-Vaciamadrid",
          publisher: organizationData,
        },
        ...(schemaType === 'Article' && articlePublishedTime ? {
          datePublished: articlePublishedTime,
          dateModified: articleModifiedTime || articlePublishedTime,
          author: {
            "@type": "Organization",
            name: articleAuthor,
          },
          publisher: organizationData,
        } : {}),
      }}
    />
    
    <!-- Organization Schema -->
    <Schema
      item={{
        "@context": "https://schema.org",
        ...organizationData,
      }}
    />
    
    <!-- View Transitions -->
    <meta name="view-transition" content="same-origin" />
    
    <!-- Google Tag Manager - Optimized: Deferred loading on user interaction or 3.5s timeout -->
    <!-- This prevents GTM from blocking initial render and impacting Core Web Vitals -->
    <script is:inline>
    (function(w,d,id,delay,l){
      let a=false;
      function g(){
        if(a)return;a=true;
        const s=d.createElement("script");
        s.async=1;
        s.src="https://www.googletagmanager.com/gtm.js?id="+id;
        s.onload=()=>{w[l]=w[l]||[];w[l].push({event:"gtm.js","gtm.start":Date.now(),"gtm.uniqueEventId":0});};
        d.head.appendChild(s);
      }
      function o(e){g();e.currentTarget.removeEventListener(e.type,o);}
      d.addEventListener("DOMContentLoaded",()=>setTimeout(g,delay));
      ["scroll","pointerdown","keydown","touchstart","mousemove"].forEach(ev=>{
        d.addEventListener(ev,o,{passive:!0});
      });
    })(window,document,"GTM-TJPFPVFH",3500,"dataLayer");
    </script>
  </head>
  <body class="min-h-screen bg-background text-foreground overflow-x-hidden">
    <!-- Google Tag Manager (noscript) - Fallback for users without JavaScript -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-TJPFPVFH" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    
    <HeaderStatic currentPath={currentPath} />
    
    <main>
      <slot />
    </main>
    
    <Footer />
    <WhatsAppButton />
    {hasForm && <Toaster client:load />}
  </body>
</html>
