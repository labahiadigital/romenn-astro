---
import "@/styles/globals.css";
import Header from "@/components/Header";
import Footer from "@/components/Footer.astro";
import WhatsAppButton from "@/components/WhatsAppButton.astro";
import { Toaster } from "@/components/ui/sonner";
import { TooltipProvider } from "@/components/ui/tooltip";
import { SEO } from "astro-seo";

interface Props {
  title: string;
  description?: string;
  image?: string;
  noindex?: boolean;
}

const { 
  title, 
  description = "Römenn - Inmobiliaria Boutique Internacional. Redefiniendo el lujo inmobiliario en Rivas-Vaciamadrid.",
  image = "/hero-frame.webp",
  noindex = false
} = Astro.props;

const currentPath = Astro.url.pathname;
const canonicalURL = new URL(currentPath, Astro.site);
const imageURL = new URL(image, Astro.site);
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Preconnect to Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- 
      Google Fonts with display=optional to prevent CLS
      display=optional: uses fallback if font doesn't load in ~100ms, no swap = no CLS
    -->
    <link 
      rel="stylesheet" 
      href="https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;500;600;700&family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400&display=optional"
    />
    
    <!-- Fallback font metrics to prevent CLS -->
    <style is:inline>
      /* Size-adjust fallback fonts to match Google Fonts metrics */
      @font-face {
        font-family: 'Manrope Fallback';
        src: local('Arial');
        ascent-override: 96%;
        descent-override: 24%;
        line-gap-override: 0%;
        size-adjust: 104%;
      }
      @font-face {
        font-family: 'Playfair Fallback';
        src: local('Georgia');
        ascent-override: 97%;
        descent-override: 22%;
        line-gap-override: 0%;
        size-adjust: 112%;
      }
      /* Apply fonts with fallbacks that have matching metrics */
      body {
        font-family: 'Manrope', 'Manrope Fallback', system-ui, -apple-system, sans-serif;
      }
      h1, h2, h3, h4, h5, h6, .font-serif {
        font-family: 'Playfair Display', 'Playfair Fallback', Georgia, serif;
      }
    </style>
    
    <!-- SEO -->
    <SEO
      title={title}
      titleTemplate="%s | Römenn"
      titleDefault="Römenn - Inmobiliaria Boutique"
      description={description}
      canonical={canonicalURL.href}
      noindex={noindex}
      nofollow={noindex}
      openGraph={{
        basic: {
          title: title,
          type: "website",
          image: imageURL.href,
          url: canonicalURL.href,
        },
        optional: {
          description: description,
          locale: "es_ES",
          siteName: "Römenn",
        },
        image: {
          alt: title,
          width: 1200,
          height: 630,
        },
      }}
      twitter={{
        card: "summary_large_image",
        site: "@romenn_es",
        creator: "@romenn_es",
        title: title,
        description: description,
        image: imageURL.href,
        imageAlt: title,
      }}
      extend={{
        link: [
          { rel: "icon", href: "/romenn-logo.svg", type: "image/svg+xml" },
          { rel: "sitemap", href: "/sitemap-index.xml" },
        ],
        meta: [
          { name: "theme-color", content: "#1a365d" },
          { name: "msapplication-TileColor", content: "#1a365d" },
        ],
      }}
    />
    
    <!-- View Transitions -->
    <meta name="view-transition" content="same-origin" />
  </head>
  <body class="min-h-screen bg-background text-foreground overflow-x-hidden">
    <TooltipProvider client:load>
      <Header currentPath={currentPath} client:load />
      
      <main>
        <slot />
      </main>
      
      <Footer />
      <WhatsAppButton />
      <Toaster client:load />
    </TooltipProvider>
  </body>
</html>
