---
import "@/styles/globals.css";
import HeaderStatic from "@/components/HeaderStatic.astro";
import Footer from "@/components/Footer.astro";
import WhatsAppButton from "@/components/WhatsAppButton.astro";
import { Toaster } from "@/components/ui/sonner";
import { SEO } from "astro-seo";

interface Props {
  title: string;
  description?: string;
  image?: string;
  noindex?: boolean;
}

const { 
  title, 
  description = "Römenn - Inmobiliaria Boutique Internacional. Redefiniendo el lujo inmobiliario en Rivas-Vaciamadrid.",
  image = "/hero-frame.webp",
  noindex = false
} = Astro.props;

const currentPath = Astro.url.pathname;
const canonicalURL = new URL(currentPath, Astro.site);
const imageURL = new URL(image, Astro.site);
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- 
      Preload critical fonts to ensure they load before first paint
      This reduces CLS by having fonts ready when text renders
    -->
    <link rel="preload" href="/fonts/manrope-latin-400-normal.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/manrope-latin-500-normal.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/manrope-latin-700-normal.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/playfair-display-latin-400-normal.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/playfair-display-latin-400-italic.woff2" as="font" type="font/woff2" crossorigin />
    
    <!-- SEO -->
    <SEO
      title={title}
      titleTemplate="%s | Römenn"
      titleDefault="Römenn - Inmobiliaria Boutique"
      description={description}
      canonical={canonicalURL.href}
      noindex={noindex}
      nofollow={noindex}
      openGraph={{
        basic: {
          title: title,
          type: "website",
          image: imageURL.href,
          url: canonicalURL.href,
        },
        optional: {
          description: description,
          locale: "es_ES",
          siteName: "Römenn",
        },
        image: {
          alt: title,
          width: 1200,
          height: 630,
        },
      }}
      twitter={{
        card: "summary_large_image",
        site: "@romenn_es",
        creator: "@romenn_es",
        title: title,
        description: description,
        image: imageURL.href,
        imageAlt: title,
      }}
      extend={{
        link: [
          { rel: "icon", href: "/romenn-logo.svg", type: "image/svg+xml" },
          { rel: "sitemap", href: "/sitemap-index.xml" },
        ],
        meta: [
          { name: "theme-color", content: "#1a365d" },
          { name: "msapplication-TileColor", content: "#1a365d" },
        ],
      }}
    />
    
    <!-- View Transitions -->
    <meta name="view-transition" content="same-origin" />
  </head>
  <body class="min-h-screen bg-background text-foreground overflow-x-hidden">
    <HeaderStatic currentPath={currentPath} />
    
    <main>
      <slot />
    </main>
    
    <Footer />
    <WhatsAppButton />
    <Toaster client:load />
  </body>
</html>
