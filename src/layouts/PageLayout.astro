---
import BaseLayout from "./BaseLayout.astro";

interface Props {
  title: string;
  subtitle?: string;
  description?: string;
}

const { title, subtitle, description } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <!-- Hero Banner -->
  <section class="relative h-[400px] flex items-center justify-center bg-primary text-white pt-24">
    <div class="max-w-7xl mx-auto px-6 text-center">
      {subtitle && <span class="text-accent uppercase tracking-[0.2em] text-xs font-bold mb-4 block">{subtitle}</span>}
      <h1 class="text-4xl md:text-6xl font-serif">{title}</h1>
    </div>
  </section>
  
  <slot />
</BaseLayout>
